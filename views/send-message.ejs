            <form accept-charset="UTF-8" action="/send-message" method="post">
                <label for="sender"><b>Your username:</b> <%= user.username %></label><br><br>
                <input name="sender" type="hidden" value="<%= user.username %>">

                <label for="senderID"><b>Your ID:</b> <%= user.Id %></label><br><br>
                <input name="senderID" type="hidden" value="<%= user.Id %>">

                <label for="receiverID"><b>Send to:</b> </label><br><br>
